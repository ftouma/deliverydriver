<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/cust_phone"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true">
  </TextView>
  <TextView
    android:id="@+id/cust_timelast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true">
  </TextView>
  <TextView
    android:id="@+id/cust_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cust_phone"
    android:layout_alignParentLeft="true">
  </TextView>
  <TextView
    android:id="@+id/cust_runs"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cust_timelast"
    android:layout_alignParentRight="true">
  </TextView>
  <TextView
    android:id="@+id/cust_runslabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/cust_timelast"
    android:layout_toLeftOf="@+id/cust_runs"
    android:text="Total Runs: ">
  </TextView>
</RelativeLayout>
